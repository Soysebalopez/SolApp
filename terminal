npx create-next-app@latest patient-management
cd patient-management

# Core dependencies
npm install firebase @firebase/app @firebase/auth @firebase/firestore
npm install @mui/material @mui/icons-material @mui/styles @emotion/react @emotion/styled
npm install @mui/x-date-pickers @date-io/date-fns date-fns

# Type definitions
npm install -D @types/react@latest @types/react-dom@latest @types/node@latest
npm install -D @types/firebase @emotion/types

# Additional dependencies
npm install react-hook-form @hookform/resolvers yup
npm install notistack

# Calendar API
npm install @google-apis/calendar
npm install @fullcalendar/react @fullcalendar/daygrid @fullcalendar/timegrid @fullcalendar/interaction 